<%- include ("../partials/header") %>



<div class="container">
	
	<div class="row no-gutters">
		<div class="col-12 col-sm-6 col-md-8">
			<header class="jumbotron">
				<div class="container">
					<h1>Welcome to Jekkit</h1>
					<p>This is a CRUD demo</p>
					<p>  
						<a class="btn btn-primary btn-large" href="/campgrounds/new">Add new Post</a>
					</p>
				</div>
		
			</header>

			<% campgrounds.forEach(function(campground){ %>
				<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
					<div class="card">
						<img class="card-img-top img-fluid" src="<%= campground.image %>" alt="<%= campground.name %>">
						<div class="card-body">
							<h5 class="card-title"><%= campground.name %></h5>
							<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
						</div>	
					</div>
					
					
				</div>
			<% }); %>
		</div>
		<!-- <div class="col-6 col-md-4">AREA FOR UPDATES</div> -->
	  </div>

	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		
	
	</div>
</div>


  
  <%- include ("../partials/footer") %>